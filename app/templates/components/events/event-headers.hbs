<section class="hero" id="regii">
  <div class="container">
    <div class="hero-body event-hero">
      <div id="event-details">
        <span class="date-wrapper">
          {{moment-format this.startTime "dddd, MMM, YYYY"}}
        </span>
        <h2 id="event-header">{{this.name}}</h2>
        <div id="event-hosts">
          Hosts: <span id="host">Placeholder host</span>
        </div>
      </div>
      <div class="event-extra-details">
        <div id="event-attendees">100 people attending</div>
        <div id="event-category">Random category</div>
      </div>
    </div>
  </div>
</section>