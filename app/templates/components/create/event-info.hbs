<div id="event-info">
  <div id="side-header">
    Basic info
  </div>
  <div id="info-fields">
    <div class="field">
      <label for="name" class="label">Name</label>
      <div class="control">
        <Input
            @type="text"
            @value={{@name}}
            @placeholder={{"Enter event name..."}}
            @class={{this.nameClasses}}
            @name="name"
            @keyDown={{fn this.clearErrors errors.nameErrors}}
        />
      </div>
      {{#if errors.nameErrors }}<ErrorMessages @errors={{errors.nameErrors}} />{{/if}}
    </div>

    <div class="field">
      <label for="guests" class="label">Guests</label>
      <div class="control">
        {{ input value = guests placeholder = "Number of guests" class=this.guestsClasses type = "number" key-press=(action "clearErrors" errors.guestsErrors ) name="guests" }}
      </div>
      {{#if errors.guestsErrors }}<ErrorMessages @errors={{errors.guestsErrors}} />{{/if}}
    </div>

    <div class="field">
      <label for="description" class="label">Description</label>
      <div class="control">
        {{ textarea value=description class=this.descriptionClasses type = "textarea" key-press=(action "clearErrors" errors.descriptionErrors ) name="description" }}
      </div>
      {{#if errors.descriptionErrors }}<ErrorMessages @errors={{errors.descriptionErrors}} />{{/if}}
    </div>
  </div>
</div>