<form {{ action "createEvent" on = "submit" }}>
  {{#let (component 'create/event-info') as |EventInfo|}}
    <EventInfo
        @name={{this.name}}
        @guests={{this.guests}}
        @description={{this.description}}
        @errors={{errors}}
        @clearFieldErrors={{action "clearFieldErrors"}}
    ></EventInfo>
  {{/let}}

  {{#let (component 'create/event-time') as |EventTime| }}
    <EventTime
      @startDate={{this.startDate}}
      @endDate={{this.endDate}}
      @startTime={{this.startTime}}
      @endTime={{this.endTime}}
      @errors={{errors}}
      @updateDate={{action "updateDate"}}
  ></EventTime>
  {{/let}}

  {{#let (component 'create/event-location') as |EventLocation|}}
    <EventLocation
        @toggleCenterSelected={{ action "toggleCenterSelected" on = "click" }}
        @toggleAddressSelected={{ action "toggleAddressSelected" }}
        @centerSelected={{ centerSelected }}
        @addressSelected={{ addressSelected }}
        @addressLine1={{this.addressLine1}}
        @addressLine2={{this.addressLine2}}
        @city={{this.city}}
        @state={{this.state}}
        @country={{this.country}}
        @centers={{centers}}
        @errors={{errors}}
        @selectCenter={{action "selectCenter"}}
        @clearFieldErrors={{action "clearFieldErrors"}}
    >
    </EventLocation>
  {{/let}}
  <div class="field" id="submit-button">
    <p class="control">
      <button class="button is-primary">Submit</button>
    </p>
  </div>
</form>
